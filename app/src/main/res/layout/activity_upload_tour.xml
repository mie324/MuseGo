<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Finish Creating Your Tour"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/uploadTour_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:hint="Tour Title"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Floor"
                android:textSize="16dp" />

            <RadioGroup
                android:id="@+id/uploadTour_floorGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <RadioButton android:id="@+id/uploadTour_groundFloor"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:background="@drawable/custom_radio_btn"
                    android:text="G"
                    android:textStyle="bold"
                    android:textColor="#7E848C"
                    />

                <RadioButton android:id="@+id/uploadTour_firstFloor"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="8dp"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:background="@drawable/custom_radio_btn"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="#7E848C" />

                <RadioButton android:id="@+id/ruploadTour_secondFloor"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:button="@android:color/transparent"
                    android:background="@drawable/custom_radio_btn"
                    android:text="2"
                    android:textStyle="bold"
                    android:textColor="#7E848C" />


            </RadioGroup>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Description"/>

        <EditText
            android:id="@+id/uploadTour_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

        <TextView
            android:id="@+id/uploadTour_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right"
            android:text="word count"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:textSize="16dp"
                android:text="Estimated Time"/>

            <EditText
                android:id="@+id/uploadTour_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:hint="hh/mm"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="79dp"
                android:textSize="16dp"
                android:text="Add tags"/>

            <EditText
                android:id="@+id/uploadTour_addContent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:hint="Add your tag here"
                android:textSize="16dp"/>

            <Button
                android:id="@+id/uploadTour_addTag"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center|right"
                android:background="@drawable/ic_add_circle_black_24dp"/>

        </LinearLayout>

        <com.cunoraz.tagview.TagView
            xmlns:tagview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/tag_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            tagview:lineMargin="5dp"
            tagview:tagMargin="5dp"
            tagview:textPaddingLeft="12dp"
            tagview:textPaddingTop="8dp"
            tagview:textPaddingRight="12dp"
            tagview:textPaddingBottom="8dp" />

        <RadioGroup
            android:id="@+id/uploadTour_privacyGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <RadioButton android:id="@+id/uploadTour_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Private"
                android:textSize="16dp"/>

            <RadioButton android:id="@+id/ruploadTour_private"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Public"
                android:textSize="16dp"/>

        </RadioGroup>


        <Button
            android:id="@+id/uploadTourBtn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginBottom="40dp"
            android:layout_gravity="center"
            android:background="@color/green"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="Create" />

    </LinearLayout>

</ScrollView>